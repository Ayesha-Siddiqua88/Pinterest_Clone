<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Document</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="feed.css">
</head>
<body>
	<body>
        <nav>
         <div class="logo">
            <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo" class="img1" />
             
         </div>
         <ul class="navLink">
          <li><a href="/feed">Feed</a></li>
          <li><a href="/profile">Profile</a></li>
          <li id="log"><a href="/logout">Logout</a></li>
         </ul>
         <div class="lines">
             <div class="l1"></div>
             <div class="l2"></div>
             <div class="l3"></div>
         </div>
       </nav>    
   <div class="container">
        <div class="cards">
          <%posts.forEach(post=> {%>
            <div class="card">
              <img src="/images/uploades/<%=post.image %>" alt="">
                <div style="display: flex; flex-direction: row; justify-content:space-between">
                  <div class="caption"><%=post.postText %></div>
                  <i class="fa-regular fa-bookmark" style="cursor: pointer;" onclick="savePost('<%= post.id %>')"></i>
                  <i class="fa-solid fa-bookmark" style="cursor: pointer; display: none;"></i>
                <div class="popup">
                  Saved to your board
                </div>
                <div class="popup-again">
                  Removed from your board
                </div>
                </div>
            </div>
          <%})%>
        </div>     
    </div>
       
       <script>
        const bookmark=document.querySelector('.fa-regular');
        const bookmarkFill=document.querySelector('.fa-solid');
        const popup=document.querySelector('.popup');
        const popupAgain=document.querySelector('.popup-again');  

        bookmark.addEventListener('click',()=>{
          bookmark.style.display='none';
          bookmarkFill.style.display='block';
          popup.style.display='block';

          setTimeout(() => {
            popup.style.display = 'none';
            }, 2000); 
        });
        
        bookmarkFill.addEventListener('click',()=>{
          bookmark.style.display='block';
          bookmarkFill.style.display='none';
          popupAgain.style.display='block';

          setTimeout(() => {
            popupAgain.style.display = 'none';
            }, 2000); 
        });
        
        
       </script>
   </body>
                     
   
</body>
</html>
